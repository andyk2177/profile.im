{
  "version": 2,
  "name": "profile.im",
  "alias": "profile.im",
  "builds": [
    { "src": "api/routes/**/*.js", "use": "@now/node" },
    { "src": "www/package.json", "use": "@now/next" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/routes/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/www/$1",
      "headers": {
        "x-request-path": "$1"
      }
    }
  ]
}
