{
  "version": 2,
  "name": "profile.im",
  "alias": "profile.im",
  "builds": [
    { "src": "api/routes/**/*.js", "use": "@now/node" },
    { "src": "www/package.json", "use": "@now/next" }
  ],
  "routes": [
    {
      "src": "/api/user_profile/(?<username>[^/]+)$",
      "dest": "/api/routes/user_profile/index.js?username=$username"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/routes/$1"
    },
    { "src": "/(?<username>[^/]+)$", "dest": "/www/users?username=$username" },
    { "src": "/(.*)", "dest": "/www/$1" }
  ]
}
